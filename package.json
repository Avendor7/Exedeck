{
    "name": "exedeck",
    "version": "1.0.0",
    "description": "",
    "license": "ISC",
    "author": {
        "name": "avendor",
        "email": "avendor@example.com"
    },
    "type": "module",
    "main": "out/main/main.js",
    "scripts": {
        "typecheck": "tsc --noEmit",
        "build": "electron-vite build",
        "pack": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder",
        "dist:win": "npm run build && electron-builder --win nsis",
        "dist:linux": "npm run build && electron-builder --linux AppImage deb",
        "smoke": "cross-env SMOKE=1 electron --no-sandbox .",
        "start": "electron .",
        "start:linux": "electron --no-sandbox ."
    },
    "devDependencies": {
        "@types/node": "^24.7.2",
        "@vitejs/plugin-vue": "^6.0.4",
        "cross-env": "^10.1.0",
        "electron": "^40.4.1",
        "electron-builder": "^26.7.0",
        "electron-vite": "^5.0.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "node-pty": "^1.1.0",
        "pidusage": "^4.0.1",
        "tree-kill": "^1.2.2",
        "vue": "^3.5.28",
        "xterm": "^5.3.0",
        "xterm-addon-fit": "^0.8.0"
    },
    "build": {
        "appId": "com.exedeck.app",
        "productName": "Exedeck",
        "directories": {
            "buildResources": "build",
            "output": "release"
        },
        "files": [
            "out/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "build/icon.png",
                "to": "build/icon.png"
            },
            {
                "from": "build/icon.ico",
                "to": "build/icon.ico"
            }
        ],
        "asar": true,
        "asarUnpack": [
            "**/*.node"
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "icon.png",
            "category": "Development",
            "maintainer": "avendor <avendor@example.com>"
        }
    }
}
