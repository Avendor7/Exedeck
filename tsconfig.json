{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2022", "DOM"]
  },
  "include": [
    "electron/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "shared/**/*.ts",
    "types/**/*.d.ts",
    "electron.vite.config.ts"
  ]
}
